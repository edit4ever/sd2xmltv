. /etc/profile

ADDON_HOME="$HOME/.kodi/userdata/addon_data/tools.module.sd2xmltv"
ADDON_DIR="$HOME/.kodi/addons/tools.module.sd2xmltv"
ADDON_SETTINGS="$ADDON_HOME/settings.xml"
if [ $# -lt 1 ]
then
  CD=`pwd`
  cd $ADDON_HOME
  USERID=`grep id=\"User\" $ADDON_SETTINGS | awk '{print $3 }' | sed -e "s,value=,," -e "s,\",,g"`
  PASSWORD=`grep id=\"Pass\" $ADDON_SETTINGS | awk '{print $3 }' | sed -e "s,value=,," -e "s,\",,g"`
  NUMDAYS=`grep id=\"days\" $ADDON_SETTINGS | awk '{print $3 }' | sed -e "s,value,-d," -e "s,=, ," -e "s,\",,g"`
  HDHOME=`grep id=\"hdhomerun\" $ADDON_SETTINGS | awk '{print $3 }' | sed -e "s,value=,," -e "s,1,--hdhomerun discover," -e "s,0,," -e "s,2,," -e "s,\",,g"`
  if [ HDHOME = 2 ]
  then
    HDHOMEIP=`grep id=\"homerunip\" $ADDON_SETTINGS | awk '{print $3 }' | sed -e "s,value=,--hdhomerun ," -e "s,\",,g"`
  else
    HDHOMEIP=''
  fi
  CHFILTER=`grep id=\"cfilter\" $ADDON_SETTINGS | awk '{print $3 }' | sed -e "s,value=,," -e "s,true,--filter," -e "s,false,," -e "s,\",,g"`
  python $ADDON_DIR/sd2xmltv.py -u $USERID -p $PASSWORD $NUMDAYS $HDHOME $HDHOMEIP $CHFILTER > sd2xmltv.log 2>&1
  cat xmltv.xml
  cd $CD
  exit 0
fi

while [ $# -gt 0 ]
do case "$1" in
   -d | --description )
     printf "tv_grab_sd2xmltv is a simple wrapper for sd2xmltv.py\n"
     ;;

   -v | --version )
     printf "0.1.3-beta\n"
     ;;

   -c | --capabilities )
     printf "baseline\n"
     ;;

    -* )
      printf "unknown option: %s\n" "$1"
      printf "Usage: %s: [--description] [--version] [--capabilities]\n" ${0##*/}
      exit 2
      ;;

esac; shift
done

exit 0
